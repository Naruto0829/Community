    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE CONTENT INNER -->
    <div class="row margin-top-10">
        <div class="col-md-12 col-sm-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet light ">
                <div class="portlet-title">
                    <div class="caption caption-md">
                        <i class="icon-bar-chart theme-font hide"></i>
                        <span class="caption-subject theme-font bold uppercase">Ads Detail</span>
                        <span class="caption-helper hide">weekly stats...</span>
                    </div>
                </div>
                <div class="portlet-body form clearfix">
                    <div class="col-md-4 blog-img blog-tag-data">
                        <div class="form-group">
                            <img src="~/assets/admin/pages/media/gallery/image4.jpg" alt="" class="img-responsive">
                        </div>
                        <div class="form-group">
                            <ul class="list-inline blog-images for">
                                <li>
                                    <a href="javascript:;">
                                        <img alt="" src="../../assets/admin/pages/media/blog/1.jpg">
                                    </a>
